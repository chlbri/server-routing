{
  "name": "@bemedev/trpc",
  "version": "0.0.1",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "module": "lib/index.mjs",
  "engines": {
    "node": ">=16"
  },
  "author": {
    "name": "chlbri",
    "email": "bri_lvi@icloud.com",
    "url": "https://bemedev.vercel.app"
  },
  "scripts": {
    "config": "pnpm install",
    "rollup": "rollup -c",
    "prepare": "husky install",
    "updateDependencies": "pnpm update --latest",
    "build": "rm -rf lib && pnpm run rollup",
    "test": "jest --passWithNoTests",
    "test:watch": "pnpm run test --watchAll",
    "build:test": "pnpm run prepublishOnly && pnpm run test",
    "remove": "rm -rf node_modules pnpm-lock.yaml",
    "clean": "pnpm run remove && pnpm run config",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "lint-watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "prepublishOnly": "pnpm run lint && pnpm run build",
    "p-q": "pretty-quick --staged --pattern \"**/*.*(ts|tsx)\"",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "10 KB"
    },
    {
      "path": "lib/index.mjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@swc/core": "^1.3.49",
    "@swc/jest": "^0.2.24",
    "@trpc/server": "^10.20.0",
    "@tsd/typescript": "^5.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "jest-tsd": "^0.1.0",
    "onchange": "^7.1.0",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "rollup": "^3.20.2",
    "rollup-plugin-tsconfig-paths": "^1.5.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "size-limit": "^8.2.4",
    "tsd": "^0.28.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4",
    "zod": "^3.21.4"
  }
}
